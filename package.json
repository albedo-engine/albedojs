{
  "name": "albedo.js",
  "version": "0.0.1",
  "description": "Minimal and efficient rendering library.",
  "repository": "git@github.com:albedo-engine/albedojs.git",
  "bugs": "https://github.com/albedo-engine/albedojs/issues",
  "author": "David Peicho <david.peicho@gmail.com>",
  "license": "MIT",
  "keywords": [
    "3D",
    "rendering",
    "webgl"
  ],
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.9.0",
    "parallelshell": "^3.0.2",
    "path": "^0.12.7",
    "rollup": "^0.59.4",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-uglify": "^4.0.0",
    "serve": "^7.1.5",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.0",
    "uglify-es": "^3.3.9"
  },
  "files": [
    "package.json",
    "LICENSE",
    "README.md",
    "dist/albedo.js",
    "dist/albedo.min.js",
    "src"
  ],
  "scripts": {
    "dev": "parallelshell \"serve --listen 8080\" \"npm run build-dev\"",
    "build": "npm run lint && npm run test && rollup -c config/prod.config.js",
    "build-dev": "rollup -c config/dev.config.js -w",
    "lint": "eslint src",
    "build-test": "rollup -c config/test.config.js ",
    "test": "npm run build-test && tape dist/albedo.testlib.js | tap-spec"
  }
}
